<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.electronicBusiness.view.NoScrollViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.electronicBusiness.view.NoScrollViewPager>

    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_normal"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <RadioButton
            android:id="@+id/rb1"
            style="@style/Radio_style"
            android:checked="true"
            android:drawableTop="@drawable/select_bind"
            android:text="入库" />

        <RadioButton
            android:id="@+id/rb2"
            style="@style/Radio_style"
            android:drawableTop="@drawable/select_pan"
            android:text="盘点" />


        <RadioButton
            android:id="@+id/rb3"
            style="@style/Radio_style"
            android:drawableTop="@drawable/select_sale"
            android:text="出库" />

        <RadioButton
            android:id="@+id/rb4"
            style="@style/Radio_style"
            android:drawableTop="@drawable/select_search"
            android:text="查询" />

        <RadioButton
            android:id="@+id/rb5"
            style="@style/Radio_style"
            android:drawableTop="@drawable/select_move"
            android:text="移位" />
    </RadioGroup>
</LinearLayout>
